{
  "manifest_version": 3,
  "name": "YouTube Shorts Hider",
  "version": "1.0",
  "description": "Hides YouTube Shorts sections.",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
